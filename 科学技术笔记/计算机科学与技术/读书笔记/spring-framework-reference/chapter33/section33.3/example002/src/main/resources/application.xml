<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="taskScheduler" class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
        <property name="poolSize" value="2"/>
        <property name="awaitTerminationSeconds" value="5"/>
        <property name="threadGroupName" value="myThreadPoolTaskScheduler"/>
        <property name="waitForTasksToCompleteOnShutdown" value="true"/>
    </bean>

    <bean id="taskExecutorExample" class="io.github.swimmingsand.TaskSchedulerExample">
        <constructor-arg ref="taskScheduler"/>
    </bean>

</beans>
